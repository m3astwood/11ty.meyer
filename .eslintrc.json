{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "semi": ["error", "never"],
      "quotes": ["error", "single"]
    },
    "overrides": [
      {
        "files":["./assets/**/*.js"],
        "env": {
          "commonjs": false,
          "node": false
        },
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ]
}
